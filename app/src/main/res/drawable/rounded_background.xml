<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de la sombra -->
            <corners android:radius="10dp" /> <!-- Radio de los bordes -->
        </shape>
    </item>

    <!-- Fondo principal -->
    <item android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Color de fondo del TextView -->
            <corners android:radius="10dp" /> <!-- Radio de los bordes -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray" /> <!-- Borde -->
        </shape>
    </item>
</layer-list>
